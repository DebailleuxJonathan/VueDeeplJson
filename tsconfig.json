{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "@nuxt/types",
      "@types/node",
      "@nuxtjs/i18n",
      "nuxt3"
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "nuxt.config.ts",
    ".nuxt/**/*.ts",
    "app.vue",
    "components/**/*.vue",
    "composables/**/*.ts",
    "layouts/**/*.vue",
    "middleware/**/*.ts",
    "pages/**/*.vue",
    "plugins/**/*.ts",
    "store/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
